<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Products</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <!-- Navigation Bar -->
    <br><br>

    <!-- Festival Selection -->
    <div class="container text-center my-4">
        <div class="btn-group" role="group" aria-label="Festival Selection">
            <button class="btn btn-primary festival-btn" data-festival="onam">Onam</button>
            <button class="btn btn-danger festival-btn" data-festival="christmas">Christmas</button>
            <button class="btn btn-success festival-btn" data-festival="ramadan">Ramadan</button>
            <button class="btn btn-warning festival-btn" data-festival="Marriage">Marriage</button>

        </div>
    </div>
    
    <!-- Products Section -->
    <div class="container">
        <div id="products-row" class="row">
            {{#each products}}
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="product-card">
                    <div class="product-img-container">
                        <img src="/images/product/{{_id}}.jpg" alt="{{this.productName}}">
                        <span class="product-badge">New</span>
                    </div>
                    <div class="card-body">
                        <p class="product-origin mb-1">From: {{this.place}}</p>
                        <h5 class="product-name">{{this.productName}}</h5>
                        <h6 class="fst-italic mb-2">{{this.Product_name}}</h6>
                        <p class="product-description">{{this.description}}</p>
                        <div class="product-price">₹{{this.price}}</div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="/users/addtoCart/{{this._id}}" class="btn btn-cart flex-grow-1 me-2">
                            <i class="fas fa-shopping-cart me-1"></i> Add to Cart
                        </a>
                        <a href="/users/buynow/{{this._id}}/1" class="btn btn-buy flex-grow-1">
                            <i class="fas fa-bolt me-1"></i> Buy Now
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <h3 class="footer-title">CONTACT US</h3>
            <div class="social-icons mt-4">
                <a href="#" class="social-icon">
                    <i class="fa-solid fa-envelope fa-lg"></i>
                </a>
                <a href="#" class="social-icon">
                    <i class="fa-brands fa-twitter fa-lg"></i>
                </a>
                <a href="#" class="social-icon">
                    <i class="fa-brands fa-facebook fa-lg"></i>
                </a>
                <a href="#" class="social-icon">
                    <i class="fa-brands fa-instagram fa-lg"></i>
                </a>
            </div>
            <div class="mt-4">
                <p>© 2025 PinkShop. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.festival-btn').forEach(button => {
            button.addEventListener('click', () => {
                const festival = button.getAttribute('data-festival');
                console.log(festival)
                fetch(`http://localhost:5000/users/getVestivalItems/${festival}`)
                    .then(response => response.json())
                    .then(data => {
                        console.log(data)
                        const productsRow = document.getElementById('products-row');
                        productsRow.innerHTML = '';
                        data.forEach(product => {
                            productsRow.innerHTML += `
                                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                    <div class="product-card">
                                        <div class="product-img-container">
                                            <img src="/images/product/${product._id}.jpg" alt="${product.productName}">
                                            <span class="product-badge">New</span>
                                        </div>
                                        <div class="card-body">
                                            <p class="product-origin mb-1">From: ${product.place}</p>
                                            <h5 class="product-name">${product.productName}</h5>
                                            <p class="product-description">${product.description}</p>
                                            <div class="product-price">₹${product.price}</div>
                                        </div>
                                        <div class="card-footer d-flex justify-content-between">
                                            <a href="/users/addtoCart/${product._id}" class="btn btn-cart flex-grow-1 me-2">
                                                <i class="fas fa-shopping-cart me-1"></i> Add to Cart
                                            </a>
                                            <a href="/users/buynow/${product._id}/1" class="btn btn-buy flex-grow-1">
                                                <i class="fas fa-bolt me-1"></i> Buy Now
                                            </a>
                                        </div>
                                    </div>
                                </div>`;
                        });
                    });
            });
        });
    </script>
</body>
</html>
