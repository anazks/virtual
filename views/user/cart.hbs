<style>
  /* General Styles */
body {
  font-family: 'Roboto', sans-serif;
  background-color: #f8f9fa;
}

.container {
  margin-top: 20px;
  min-height: 45vh;
  padding: 0 15px;
}

/* Cart Header Styles */
h1.text-center {
  font-weight: 700;
  color: #343a40;
  border-bottom: 2px solid #f5b397;
  display: inline-block;
  padding-bottom: 10px;
}

/* Price Information Styles */
h2.text-end {
  font-weight: 600;
  color: #343a40;
  margin-bottom: 5px;
}

h3.text-end {
  margin-top: 0;
  margin-bottom: 20px;
}

.text-success {
  color: #28a745 !important;
  font-weight: 500;
}

/* Card Styles */
.card {
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  transition: transform 0.3s ease;
  border: none;
}

.card:hover {
  transform: translateY(-5px);
}

.cart {
  transition: all 0.3s ease;
}

.img-fluid {
  object-fit: cover;
  height: 100%;
  width: 100%;
}

.card-body {
  padding: 20px;
}

.card-title {
  font-weight: 600;
  margin-bottom: 10px;
}

.card-text {
  color: #495057;
  margin-bottom: 15px;
}

/* Button Styles */
.btn {
  border-radius: 5px;
  padding: 8px 15px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-light {
  background-color: #fff;
  color: #343a40;
  border: 1px solid #dee2e6;
}

.btn-light:hover {
  background-color: #f8f9fa;
  color: #f5b397;
  border-color: #f5b397;
}

/* Empty Cart Message */
h1.text-secondary {
  color: #6c757d;
  font-style: italic;
  opacity: 0.7;
}

/* Footer Styles */
.footer {
  background: linear-gradient(to right, #343a40, #212529);
  color: #fff;
  height: 30vh;
  margin-top: 5rem !important;
  border-top: 5px solid #f5b397;
}

.footer-wrapper {
  padding: 20px 0;
}

.footer-title {
  font-weight: 700;
  letter-spacing: 2px;
  position: relative;
  display: inline-block;
}

.footer-title:after {
  content: '';
  position: absolute;
  width: 50px;
  height: 3px;
  background-color: #f5b397;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
}

.icons-group {
  transition: all 0.3s ease;
}

.fa-solid, .fa-brands {
  cursor: pointer;
  color: #fff;
  transition: all 0.3s ease;
}

.fa-solid:hover, .fa-brands:hover {
  color: #f5b397;
  transform: scale(1.1);
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .card {
    max-width: 100% !important;
  }
  
  .col-md-4, .col-md-8 {
    width: 100%;
  }
  
  .img-fluid {
    height: 300px;
  }
  /* Recommendation Section Styles */
.recommendations-container {
  padding: 20px 0;
}

.recommendations-container h2 {
  font-weight: 700;
  color: #343a40;
  border-bottom: 2px solid #f5b397;
  display: inline-block;
  padding-bottom: 10px;
  margin-bottom: 30px;
}

.recommendations-container .card {
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: none;
}

.recommendations-container .card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
}

.recommendations-container .card-img-top {
  height: 200px;
  object-fit: cover;
}

.recommendations-container .card-title {
  font-weight: 600;
  color: #343a40;
}

.recommendations-container .card-text {
  color: #495057;
  font-size: 0.9rem;
}

.recommendations-container .btn-light:hover {
  background-color: #f5b397;
  color: #fff;
  border-color: #f5b397;
}

/* Responsive Adjustments for Recommendations */
@media (max-width: 768px) {
  .recommendations-container .row {
    flex-direction: column;
  }
  
  .recommendations-container .col {
    width: 100%;
    margin-bottom: 20px;
  }
}
}
</style>
