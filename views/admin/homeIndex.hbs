            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 120px 20px;
            margin-bottom: 0;
            position: relative;
        }
        
        .features {
            padding: 60px 0;
            background-color: var(--light-bg);
        }
        
        .feature-icon {
            font-size: 3rem;
            margin-bottom: 20px;
            color: var(--secondary-color);
        }
        
        .feature-box {
            text-align: center;
            padding: 30px 20px;
            margin-bottom: 30px;
            border-radius: 10px;
            transition: all 0.3s ease;
            background-color: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .feature-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }
        
        .designer-section {
            padding: 60px 0;
            background: white;
        }
        
        .model-preview {
            height: 400px;
            border: 2px solid var(--accent-color);
            border-radius: 10px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            background: #f0f0f0;
        }
        
        .design-controls {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .color-swatch {
            display: inline-block;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin: 0 5px;
            cursor: pointer;
            border: 2px solid white;
            transition: all 0.2s ease;
        }
        
        .color-swatch:hover, .color-swatch.active {
            transform: scale(1.2);
            border: 2px solid var(--text-color);
        }
        
        .style-option {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .style-option:hover, .style-option.active {
            background-color: var(--accent-color);
            border-color: var(--primary-color);
        }
        
        .trending-section {
            padding: 60px 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        
        .trending-card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            transition: all 0.3s ease;
            background: white;
        }
        
        .trending-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }
        
        .trending-img {
            height: 200px;
            background-size: cover;
            background-position: center;
        }
        
        .trending-info {
            padding: 15px;
        }
        
        .footer {
            background-color: var(--primary-color);
            color: white;
            padding: 30px 0;
            text-align: center;
        }
        
        .btn-primary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            padding: 10px 25px;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .button_chat {
            width: 70px;
            height: 70px;
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 1000;
            background-color: var(--secondary-color);
            color: white;
            border-radius: 50%;
            border: none;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .button_chat:hover {
            transform: scale(1.1);
            background-color: var(--primary-color);
        }
        
        .dress-customization {
            margin-top: 30px;
        }
        
        .customization-title {
            margin-bottom: 20px;
            color: var(--primary-color);
            font-weight: bold;
        }
        
        .size-guide-toggle {
            color: var(--secondary-color);
            cursor: pointer;
            text-decoration: underline;
            font-weight: bold;
        }
    </style>
</head>
