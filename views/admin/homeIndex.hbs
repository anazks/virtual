<script>
    // Simple interactive elements for the dress designer
    $(document).ready(function() {
        // Style options
        $('.style-option').click(function() {
            $(this).siblings().removeClass('active');
            $(this).addClass('active');
            updateDressPreview();
        });
        
        // Color swatches
        $('.color-swatch').click(function() {
            $('.color-swatch').removeClass('active');
            $(this).addClass('active');
            updateDressPreview();
        });
        
        // Sleeve length and dress length changes
        $('#sleeve-length, #dress-length').change(function() {
            updateDressPreview();
        });
        
        // Size selection
        $('input[name="size"]').change(function() {
            updateDressPreview();
        });
        
        // Function to simulate dress preview update
        function updateDressPreview() {
            // In a real application, this would update the 3D model or image
            console.log('Updating dress preview with new selections');
            
            // Get all selected options
            const style = $('.style-option.active').data('style');
            const neckline = $('.style-option[data-neckline].active').data('neckline');
            const color = $('.color-swatch.active').data('color');
            const sleeve = $('#sleeve-length').val();
            const length = $('#dress-length').val();
            const size = $('input[name="size"]:checked').val();
            
            // Log selections (would be used to update preview in real app)
            console.log({style, neckline, color, sleeve, length, size});
            
            // Simulate loading of new preview
            $('#model-preview-img').css('opacity', '0.5');
            setTimeout(function() {
                $('#model-preview-img').css('opacity', '1');
            }, 500);
        }
        
        // Preserved from original code
        let btnOpen = document.querySelector('#open');
        let myTab;
        btnOpen.addEventListener('click', ()=>{
            myTab = window.open('https://chat.vercel.ai/', '_blank', 'height=500,width=500');
        });
    });
</script>
