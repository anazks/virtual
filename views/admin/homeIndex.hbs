        :root {
            --primary-color: #6a1b9a;
            --secondary-color: #9c27b0;
            --accent-color: #e1bee7;
            --text-color: #333;
            --light-bg: #f8f9fa;
        }
        
        body {
            padding-top: 56px;
            font-family: 'Roboto', sans-serif;
            color: var(--text-color);
        }
        
        .navbar {
            background-color: var(--primary-color);
        }
        
